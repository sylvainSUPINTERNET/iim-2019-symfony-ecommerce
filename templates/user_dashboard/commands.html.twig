{% extends 'base.html.twig' %}

{% block title %}Commands{% endblock %}

{% block body %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Amount</th>
            <th scope="col">Created at</th>
        </tr>
        </thead>
        <tbody>
        {% for command in commands %}
            <tr>
                <td scope="row"><a href="{{  path('command_show', {'id': command.id})}}"><i class="fa fa-eye"></i> view</a></td>
                <th >{{ command.amount | price_format }}</th>
                <td>{{ command.createdAt | date }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}
