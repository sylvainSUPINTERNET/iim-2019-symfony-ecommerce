{% extends 'base.html.twig' %}

{% block title %}Commands{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page"><a href="{{ path('dashboard_commands') }}">Your commands</a></li>
        </ol>
    </nav>

    {% if commands|length > 0 %}

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Amount</th>
                <th scope="col">Created at</th>
            </tr>
            </thead>
            <tbody>

            {% for command in commands %}
                <tr>
                    <td scope="row"><a href="{{ path('command_show', {'id': command.id}) }}"><i class="fa fa-eye"></i>
                            view</a></td>
                    <th>{{ command.amount | price_format }}
                    <td>{{ command.createdAt | date }}</td>
                </tr>
            {% endfor %}


            </tbody>
        </table>
    {% else %}
        <p class="text-center alert alert-warning">No commands for the moment</p>
    {% endif %}
{% endblock %}
