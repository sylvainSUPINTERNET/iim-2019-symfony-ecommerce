{% extends 'base.html.twig' %}

{% block title %}Commands{% endblock %}

{% block body %}
    {% if commands|length > 0 %}

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Show</th>
            </tr>
            </thead>
            <tbody>

            {% for command in commands %}
                <tr>
                    <td scope="row"><a href="{{ path('admin_command_show', {'id': command.id}) }}"><i class="fa fa-eye"></i>
                            view</a></td>


                </tr>
            {% endfor %}


            </tbody>
        </table>
    {% else %}
        <p class="text-center alert alert-warning">No commands for the moment</p>
    {% endif %}
{% endblock %}
