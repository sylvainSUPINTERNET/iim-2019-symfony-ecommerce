{% extends 'base.html.twig' %}

{% block title %}Collections{% endblock %}

{% block body %}
    <!-- Content page -->
    <section class="bgwhite p-t-55 p-b-65">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-3 p-b-50">
                    <div class="leftbar p-r-20 p-r-0-sm">
                        <!--  -->
                        <h4 class="m-text14 p-b-7">
                            Categories
                        </h4>

                        <ul class="p-b-54">
                            {% for collection in collections %}
                                <li class="p-t-4">
                                    <a href="{{ path('collection_products', {'slug_collection': collection.slug, 'collection_id': collection.id}) }}">{{ collection.name }}</a>
                                </li>
                            {% endfor %}
                        </ul>

                        <!--  -->
                        <h4 class="m-text14 p-b-32">
                        </h4>

                        <div class="filter-price p-t-22 p-b-50 bo3">

                        </div>

                        <div class="filter-color p-t-22 p-b-50 bo3">
                            <div class="m-text15 p-b-12">
                            </div>
                        </div>

                        <div class="search-product pos-relative bo4 of-hidden">
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-md-8 col-lg-9 p-b-50">
                    <!--  -->
                    <div class="flex-sb-m flex-w p-b-35">
                        <div class="flex-w">
                            <div class="rs2-select2 bo4 of-hidden w-size12 m-t-5 m-b-5 m-r-10">
                            </div>

                            <div class="rs2-select2 bo4 of-hidden w-size12 m-t-5 m-b-5 m-r-10">
                            </div>
                        </div>

                        <span class="s-text8 p-t-5 p-b-5">
						</span>
                    </div>

                    <!-- Product -->
                    <div class="row">

                        {% for product in collection.products %}
                            <div class="col-sm-12 col-md-6 col-lg-4 p-b-50">
                                <!-- Block2 -->
                                <div class="col-sm-12 col-md-6 col-lg-4 p-b-50">
                                    <!-- Block2 -->
                                    <div class="block2">
                                        <div class="block2-img wrap-pic-w of-hidden pos-relative">
                                            <img src="{{ product.pictureUrl }}" alt="IMG-PRODUCT">
                                            <div class="block2-overlay trans-0-4">
                                                <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                                                    <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                                                    <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                                                </a>

                                                <div class="block2-btn-addcart w-size1 trans-0-4">
                                                    <!-- Button -->
                                                    <button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4 add-to-cart"
                                                            onclick="addToCart({{ product.id }})">
                                                        Add to Cart
                                                    </button>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="block2-txt p-t-20">
                                            <a href="#todo" class="block2-name dis-block s-text3 p-b-5">
                                                {{ product.name }}
                                            </a>

                                            <span class="block2-price m-text6 p-r-5">
										{{ product.price | price_format }}
									</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        function addToCart(productId) {
            $.post("{{ path('add_cart_json') }}", {
                product_id: productId,
                quantity: 1
            });
        }
    </script>
{% endblock %}